<main class="container mx-auto mt-14 px-5 flex flex-row">
    <%if user_signed_in?%>
        <% @data = scrape_sendage_sends(@followees, 5)%>
        <% followees = @data[:users]%>
        <% sends = @data[:sends].sort_by {|send| send[:date]}.reverse%>

        <div class="justify-self-start inset-y-0 left-0">
            <%= render 'following', followees: followees%>
        </div>
        <div class="container mx-auto">
            <%= render 'feed', sends: sends %>
        </div>
    <%else%>
        <div>Log in to start stalking</div>
    <%end%>
</main>